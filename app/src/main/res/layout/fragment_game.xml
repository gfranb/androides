<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GameFragment"
    android:background="#20391E"
    android:id="@+id/fragment_game"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/addMoreCoins"
            android:layout_width="8dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_add_24"
            android:visibility="invisible">
        </ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/coin_icon24"
            android:layout_gravity="center"
            >
        </ImageView>
        <TextView
            android:id="@+id/tv_moneyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:background="#20391E"
            android:textAlignment="center"
            android:textSize="30sp"
            android:shadowRadius="10"
            android:textColor="@color/white">
        </TextView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp">
        </Space>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/et_coinsToPlay"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="0"
                android:background="@drawable/edit_text_background"
                android:inputType="numberDecimal"
                android:hint="Inserte apuesta"
                android:layout_marginLeft="20dp">
            </EditText>
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_replay_24"
                android:text=""></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_rojo"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Rojo"
                    android:textColor="@color/white"
                    android:background="@drawable/button_red"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">
                </Button>

                <TextView
                    android:id="@+id/apuestas_rojo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="0$"
                    android:textColor="@color/white"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_verde"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Verde"
                    android:textColor="@color/white"
                    android:background="@drawable/button_green"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">
                </Button>

                <TextView
                    android:id="@+id/apuestas_verde"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="0$"
                    android:textColor="@color/white">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/btn_negro"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Negro"
                    android:textColor="@color/white"
                    android:background="@drawable/button_black"
                    android:layout_margin="5dp"
                    android:layout_gravity="center">
                </Button>

                <TextView
                    android:id="@+id/apuestas_negro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0$"
                    android:textColor="@color/white">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </Space>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </Space>
        <Button
            android:id="@+id/btn_play"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button_white"
            android:text="Play"></Button>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp">
        </Space>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_media_play" />
</FrameLayout>